<div class="devise">
	<h2>Forgot your password?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,:class => 'pure-form pure-form-stacked' }) do |f| %>
		<div class="login">
		  <%= devise_error_messages! %>

		  <div class="field">
		    <%= f.label :email %>
		    <%= f.email_field :email, autofocus: true,:class => 'form-control' %>
		  </div>

		  <div class="actions">
		    <%= f.submit "Send me reset password instructions",:class => 'pure-button pure-button-primary' %>
		  </div>
		  <p><%= render "users/shared/links" %></p>
	  </div>
	<% end %>
</div>