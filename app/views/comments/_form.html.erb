<%= form_for ([@article,@article.comments.build]) , html:{class:"pure-form pure-form-aligned"} do |f| %>
  <div class="pure-control-group">
  	<%= f.label :commenter, "Commenter" %>
  	<%= f.text_field :commenter %>
  </div>
  <div class="pure-control-group">
  	<%= f.label :body, "Commenter" %>
  	<%= f.text_area :body %>
  </div>
  <%= f.submit "Submit" %>
<% end -%>