<%= render 'header' %>
<% #binding.pry %>
<section>
  <div class="contents blog row">
    <div class="postslist col-sm-12 col-md-8">
      <article>
				<% @categorys.each do |d| %>
					<% if d.status %>	
				  	<div class="post">
						  <h2><%= d.title %></h2>
						  <div class="option">
							  <strong><%= d.updated_at.strftime('%Y/%m/%d') %></strong>
							  <% if d.tags.any? %>
						      Tag:<span><%= raw d.tags.map(&:name).map { |t| link_to t, tag_path(t)}.join(', ') %></span>
						    <% end %>
					    </div>
						  <div class="box"><%#= image_tag d.avatar.url %><%= d.text %></div>
						  <div class="more">
						  	<%= link_to '続きを見る', article_path(d), :class => "btn btn-default" %>
						  </div>
						</div>
					<% end %>
				<% end %>
			</article>
    </div>
    <div class="sidenavi col-sm-12 col-md-4">
      <%= render 'side' %>
    </div>
  </div>
</section>

<%= render 'footer' %>
