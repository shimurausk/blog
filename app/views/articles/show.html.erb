<%= render 'header' %>

<section>
  <div class="contents blog pure-g">
    <div class="postslist pure-u-1 pure-u-md-2-3">
			<article>
				<div class="post">
			      <h2><%= @article.title %></h2>
						<div class="option">
						  <strong><%= @article.updated_at.strftime('%Y/%m/%d') %></strong>
						  category:<span><%= link_to @article.category, category_path(@article.category) %></span>
						  <% if @article.tags.any? %>
					      Tag:<span><%= raw @article.tags.map(&:name).map { |t| link_to t, tag_path(@article)}.join(', ') %></span>
					    <% end %>
				    </div>
			      <div class="box"><%= @article.text %></div>
			</article>
    </div>
    <div class="sidenavi pure-u-1 pure-u-md-1-3">
      <%= render 'side' %>
    </div>
  </div>
</section>

<%= render 'footer' %>
