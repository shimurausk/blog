<%= form_for @article do |f| %>

	<% if @article.errors.any? %>
		<div id="error_explanation"></div>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :text %>
	<%= f.text_area :text %>

	<%= f.submit %>

<% end %> 