<%= render 'header' %>
<section>
  <div class="contents pure-g">
    <div class="postslist pure-u-2-3">
      <article>
				<% @tag.each do |d| %>
				<% #binding.pry %>
					<% if d.status %>	
				  	<div class="post">
				  	<%#= render render(:layout => "some_partial") do%>
						  <h2><%= d.title %></h2>
						  <span><%= d.updated_at %></span><span><%= d.category %></span>
						  <div class="box"><%#= image_tag d.avatar.url %><%= d.text %></div>
						  <div>
						  	<button><%= link_to 'show', article_path(d)%></button>
						  </div>
						</div>
					<% end %>
				<% end %>
			</article>
    </div>
    <div class="sidenavi pure-u-1-3">
      <%= render 'side' %>
    </div>
  </div>
</section>

<%= render 'footer' %>
