<div class="col-md-4">

    <!-- Blog Search Well -->
    <div class="well">
        <h4>Blog Search</h4>
          <%= search_form_for @q,url: articles_search_path ,class: "input-group" do |f| %>
			  	  <%= f.search_field :text_cont,class: "form-control" %>
			  	  <p class="input-group-btn">
    				  	<%= button_tag(type: 'submit',class: 'btn btn-default') do %>
						  <% content_tag(:span, '',class: "glyphicon glyphicon-search" ) %>
						<% end %>
						</p>
			  	<% end %>
        <!-- /.input-group -->
    </div>

    <!-- Blog Categories Well -->
    <div class="well">
        <h4>Blog Categories</h4>
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-unstyled">
                    <% @articles_category.each do |c| %>
    				    <li><%= link_to c, category_path(c) %></li>
				    <% end %>
                </ul>
            </div>
        </div>
        <!-- /.row -->
    </div>

    <!-- Blog Categories Well -->
    <div class="well">
        <h4>Tag</h4>
        <div class="row">
            <div class="col-lg-6">
                <div class="tag_cloud">
					<% tag_cloud Article.tag_counts, %W[s m l] do |t,css_class| %>
						<% if t.count > 1 %>
							<%= link_to t.name, tag_path(t.name), class: css_class %>
						<% end %>
					<% end %>
			    </div>
            </div>
        </div>
        <!-- /.row -->
    </div>

